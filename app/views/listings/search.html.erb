<style>
body {
    background-color: grey;
}
</style>
<div class="topbar">
  <div class="container">
    <div class="vertical-center">
      <%=link_to "FindMe",root_path  %>> Search
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
     <div class="newest">Newest</div>
     <div class="oldest">Oldest</div>
     <div class="highest-price">Highest-price</div>
     <div class="lowest-price">Lowest-price</div>
   </div>
  <ul class="list-margin">

    <% if @listings.each do|listing| %>
    <li>
      <span>
        <%= listing.created_at.strftime('Printed on %B/%d/%Y')%> <%#time_ago_in_words(listing.created_at) %>
      </span>
      <%= link_to listing.title, listing %>(<%= listing.city %>, <%= listing.state %>)
    </li>
    <% end.empty?%>
     <p> Sorry, there are no posts in this category :(</p>
    <% end %>
  </ul>
</div>
